<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MtgBinder.Avalonia.ViewModels;assembly=MtgBinder.Avalonia"
        xmlns:view="clr-namespace:MtgBinder.Avalonia.Views;assembly=MtgBinder.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MtgBinder.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MtgBinder.Avalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <!--<TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->

  <TabControl>
    <TabItem Header="Card Lookup">
      <view:CardLookupView x:Name="cardLookupView" DataContext="{Binding CardLookupViewModel}" />
    </TabItem>
    <TabItem Header="Others"></TabItem>
    
  </TabControl>

</Window>
