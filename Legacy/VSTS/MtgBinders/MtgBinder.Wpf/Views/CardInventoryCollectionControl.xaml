<UserControl x:Class="MtgBinder.Wpf.Views.CardInventoryCollectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MtgBinder.Wpf.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="rootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Click="OnAddInventory" Visibility="{Binding AddButtonVisibility}">Add</Button>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding InventoryCards}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <local:CardInventorySingleControl InventoryCard="{Binding}" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>