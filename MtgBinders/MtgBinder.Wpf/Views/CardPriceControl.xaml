<UserControl x:Class="MtgBinder.Wpf.Views.CardPriceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MtgBinder.Wpf.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="rootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label VerticalContentAlignment="Center" >EUR:</Label>
        <TextBlock VerticalAlignment="Center" Text="{Binding PriceEur}" Grid.Column="1" Margin="5,0,0,0" />

        <Label VerticalContentAlignment="Center" Grid.Column="2" Visibility="{Binding DisplayTixVisibility}">Tix:</Label>
        <TextBlock VerticalAlignment="Center" Text="{Binding PriceTix}" Visibility="{Binding DisplayTixVisibility}" Grid.Column="3" Margin="5,0,0,0" />
    </Grid>
</UserControl>