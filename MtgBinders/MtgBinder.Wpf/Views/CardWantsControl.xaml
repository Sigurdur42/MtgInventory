<UserControl x:Class="MtgBinder.Wpf.Views.CardWantsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MtgBinder.Wpf.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="rootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button Click="OnRemoveWant" IsEnabled="{Binding CanDecrease}">Rem</Button>
        <TextBlock Grid.Column="1" Text="{Binding WantCount}" Margin="5,0,0,0"></TextBlock>
        <Button Grid.Column="2" Click="OnAddWant" Margin="5,0,0,0" IsEnabled="{Binding CanIncrease}">Add</Button>
    </Grid>
</UserControl>